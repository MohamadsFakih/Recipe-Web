{
  "name": "recipe-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run db:seed && npx next dev --webpack",
    "build": "node scripts/ensure-postgres-for-build.js && prisma generate && prisma db push && npx next build",
    "start": "npm run db:seed && npx next start",
    "lint": "eslint",
    "postinstall": "node scripts/ensure-postgres-for-build.js && prisma generate",
    "db:start": "docker compose up -d",
    "db:push": "prisma db push",
    "db:setup": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "node prisma/seed.cjs"
  },
  "prisma": {
    "seed": "node prisma/seed.cjs"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@vercel/blob": "^2.2.0",
    "bcryptjs": "^3.0.3",
    "next": "16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "openai": "^6.22.0",
    "prisma": "^5.22.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "dotenv": "^16.4.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "5.9.3"
  }
}
